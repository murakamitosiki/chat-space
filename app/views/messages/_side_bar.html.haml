.side
  .top
    .top__user
      .top__user__name
        = current_user.name
      .top__user__icon
        .top__user__icon__pencil
          =link_to new_group_path do
            =icon('fa', 'edit')
        .top__user__icon__config
          =link_to edit_user_path(current_user)do
            =icon('fa','cog')
  .bottom
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .bottom__user
          = group.name
        .bottom__message
          = group.show_last_message

    
